{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{% trans %}Lista wydatk√≥w{% endtrans %}</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Vat</th>
                <th>Netprice</th>
                <th>Grossprice</th>
                <th>Summarygrossprice</th>
                <th>Purchasedate</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.quantity }}</td>
                <td>{{ entity.vat }}</td>
                <td>{{ entity.netPrice }}</td>
                <td>{{ entity.grossPrice }}</td>
                <td>{{ entity.summaryGrossPrice }}</td>
                <td>{% if entity.purchaseDate %}{{ entity.purchaseDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
